{% extends 'base.html.twig' %}

{% set template = 'evenement' %}

{% block body %}
    <div class="profil_container">
        <div class="profil_container_content">
            <img src="{{ asset('media/images/users/attachment_121087384.jfif') }}" alt="">
            <div class="profil_container_content_info">
                {{ form_start(form) }}
                {{ form_label(form.email) }}
                {{ form_widget(form.email,{
                    'attr': {
                        'class': 'form-control mt-2 mb-4'
                    }
                }) }}
                {{ form_errors(form.email) }}
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first,{
                    'attr': {
                        'class': 'form-control mt-2 mb-4'
                    }
                })}}
                {{ form_errors(form.plainPassword.first) }}
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second,{
                    'attr': {
                        'class': 'form-control mt-2 mb-4'
                    }
                }) }}
                {{ form_errors(form.plainPassword.second) }}
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom,{
                    'attr': {
                        'class': 'form-control mt-2 mb-4'
                    }
                }) }}
                {{ form_errors(form.nom) }}
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom,{
                    'attr': {
                        'class': 'form-control mt-2 mb-4'
                    }
                }) }}
                {{ form_errors(form.prenom) }}
                {{ form_label(form.naissance) }}
                {{ form_widget(form.naissance,{
                    'attr': {
                        'class': 'form-control mt-2 mb-4'
                    }
                }) }}
                {{ form_errors(form.naissance) }}
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie,{
                    'attr': {
                        'class': 'form-control form-select mt-2 mb-4'
                    }
                }) }}
                {{ form_errors(form.categorie) }}
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">valider</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="profil_container_event">
            <h2>Vos événement :</h2>
            {% for inscription in inscriptions %}
                <span>
                    <img class="image" src="{{ asset('media/images/featured/vignettes/' ~ inscription.evenement.vignette) }}">
                    <div class="content">
                        <p> {{ inscription.evenement.nom }}</p>
                        <p> {{ inscription.evenement.debuterLe|date("m/d/Y")}}</p>
                        <p> {{ inscription.evenement.description }}</p>
                         <a class="link ec-link eec-link"
                            href="{{
                            path(template ~ '_single',{'id': inscription.evenement.id}) }}"
                         >Voir l'événement >
                    </a>
                    </div>
                </span>
            {% endfor %}
        </div>
    </div>
{% endblock %}
