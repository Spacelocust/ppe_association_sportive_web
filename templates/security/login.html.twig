{% extends 'base.html.twig' %}
  {% block stylesheets %}
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
  {% endblock %}
{% block body %}
    <section class="d-flex mt-5 mx-5 ">
        <div class="container ">
            <form action="{{ path('login') }}" method="post" class="mt-5">
                <h2 class="h2">Connectez-vous</h2>
                <div class=" w-50 p-3 mb-3">
                    <label for="email" class="form-label">Adresse Email</label>
                    <input type="text" id="username" name="email" class="form-control p-2 border" required autofocus value="{{ last_username }}">
                </div>
                <div class="w-50 p-3 mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" id="password" name="password" class="form-control p-2 border"  required>
                    <a class="nav-item" href="{{ path("forgettenPassword") }}">Mot de passe oublié ?</a>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="w-25 p-3 mb-3">
                    <button class="btn px-3" name="submit" type="submit">Connexion</button>
                </div>
                {% if error %}
                    <div class="alert alert-danger mt-4 w-50 ">
                        {{ error.messageKey | trans(error.messagedata, 'security')}}
                    </div>
                {% endif %}
            </form>
        </div>
        <div class="container-fluid mt-5">
            <h2 class="h2 p-3 mb-3">Pas encore de compte ?</h2>
            <span class="p-3 mb-3"> Vous êtes étudiant et vous n'avez pas encore de compte sur la plateforme</span>
            <div class="w-50 p-3 mt-4">
                <a href="{{ path('registration') }}" class="btn btn-success px-3 rounded-pill" type="submit">Accèder au formualire d'inscription</a>
            </div>
        </div>
    </section>
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    {% endblock %}
{% endblock %}
